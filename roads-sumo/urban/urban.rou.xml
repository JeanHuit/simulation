<?xml version="1.0" encoding="UTF-8"?>
<!-- urban.rou.xml - Urban traffic flows -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle types -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="16.67" guiShape="passenger" color="1,1,0"/>
    <vType id="bus" accel="1.2" decel="4.0" sigma="0.5" length="12" minGap="3.0" maxSpeed="13.89" guiShape="bus" color="0,0,1"/>
    <vType id="taxi" accel="2.8" decel="5.0" sigma="0.3" length="5" minGap="2.0" maxSpeed="16.67" guiShape="passenger" color="1,1,0"/>
    <vType id="delivery" accel="1.8" decel="4.0" sigma="0.5" length="7" minGap="2.5" maxSpeed="13.89" guiShape="delivery" color="1,1,1"/>
    
    <!-- Sample routes - Horizontal (West to East) -->
    <route id="route_h_bottom" edges="h00_01 h01_02 h02_03"/>
    <route id="route_h_mid1" edges="h10_11 h11_12 h12_13"/>
    <route id="route_h_mid2" edges="h20_21 h21_22 h22_23"/>
    <route id="route_h_top" edges="h30_31 h31_32 h32_33"/>
    
    <!-- Sample routes - Horizontal (East to West) -->
    <route id="route_h_bottom_rev" edges="h03_02 h02_01 h01_00"/>
    <route id="route_h_mid1_rev" edges="h13_12 h12_11 h11_10"/>
    <route id="route_h_mid2_rev" edges="h23_22 h22_21 h21_20"/>
    <route id="route_h_top_rev" edges="h33_32 h32_31 h31_30"/>
    
    <!-- Sample routes - Vertical (South to North) -->
    <route id="route_v_left" edges="v00_10 v10_20 v20_30"/>
    <route id="route_v_mid1" edges="v01_11 v11_21 v21_31"/>
    <route id="route_v_mid2" edges="v02_12 v12_22 v22_32"/>
    <route id="route_v_right" edges="v03_13 v13_23 v23_33"/>
    
    <!-- Sample routes - Vertical (North to South) -->
    <route id="route_v_left_rev" edges="v30_20 v20_10 v10_00"/>
    <route id="route_v_mid1_rev" edges="v31_21 v21_11 v11_01"/>
    <route id="route_v_mid2_rev" edges="v32_22 v22_12 v12_02"/>
    <route id="route_v_right_rev" edges="v33_23 v23_13 v13_03"/>
    
    <!-- Complex routes with turns -->
    <route id="route_complex1" edges="h00_01 h01_02 v02_12 v12_22 h22_23"/>
    <route id="route_complex2" edges="v01_11 v11_21 h21_22 v22_32 h32_33"/>
    <route id="route_complex3" edges="h30_31 v31_21 v21_11 h11_12 v12_02"/>
    <route id="route_complex4" edges="v03_13 h13_12 h12_11 v11_01 h01_00"/>
    
    <!-- Traffic flows - Horizontal traffic -->
    <flow id="flow_h1" type="car" route="route_h_bottom" begin="0" end="3600" vehsPerHour="400" departLane="best" departSpeed="random"/>
    <flow id="flow_h2" type="car" route="route_h_mid1" begin="0" end="3600" vehsPerHour="450" departLane="best" departSpeed="random"/>
    <flow id="flow_h3" type="car" route="route_h_mid2" begin="0" end="3600" vehsPerHour="420" departLane="best" departSpeed="random"/>
    <flow id="flow_h4" type="car" route="route_h_top" begin="0" end="3600" vehsPerHour="380" departLane="best" departSpeed="random"/>
    
    <flow id="flow_h1_rev" type="car" route="route_h_bottom_rev" begin="0" end="3600" vehsPerHour="390" departLane="best" departSpeed="random"/>
    <flow id="flow_h2_rev" type="car" route="route_h_mid1_rev" begin="0" end="3600" vehsPerHour="430" departLane="best" departSpeed="random"/>
    <flow id="flow_h3_rev" type="car" route="route_h_mid2_rev" begin="0" end="3600" vehsPerHour="410" departLane="best" departSpeed="random"/>
    <flow id="flow_h4_rev" type="car" route="route_h_top_rev" begin="0" end="3600" vehsPerHour="370" departLane="best" departSpeed="random"/>
    
    <!-- Traffic flows - Vertical traffic -->
    <flow id="flow_v1" type="car" route="route_v_left" begin="0" end="3600" vehsPerHour="350" departLane="best" departSpeed="random"/>
    <flow id="flow_v2" type="car" route="route_v_mid1" begin="0" end="3600" vehsPerHour="400" departLane="best" departSpeed="random"/>
    <flow id="flow_v3" type="car" route="route_v_mid2" begin="0" end="3600" vehsPerHour="380" departLane="best" departSpeed="random"/>
    <flow id="flow_v4" type="car" route="route_v_right" begin="0" end="3600" vehsPerHour="360" departLane="best" departSpeed="random"/>
    
    <flow id="flow_v1_rev" type="car" route="route_v_left_rev" begin="0" end="3600" vehsPerHour="340" departLane="best" departSpeed="random"/>
    <flow id="flow_v2_rev" type="car" route="route_v_mid1_rev" begin="0" end="3600" vehsPerHour="390" departLane="best" departSpeed="random"/>
    <flow id="flow_v3_rev" type="car" route="route_v_mid2_rev" begin="0" end="3600" vehsPerHour="370" departLane="best" departSpeed="random"/>
    <flow id="flow_v4_rev" type="car" route="route_v_right_rev" begin="0" end="3600" vehsPerHour="350" departLane="best" departSpeed="random"/>
    
    <!-- Complex route flows -->
    <flow id="flow_complex1" type="car" route="route_complex1" begin="0" end="3600" vehsPerHour="200" departLane="best" departSpeed="random"/>
    <flow id="flow_complex2" type="car" route="route_complex2" begin="0" end="3600" vehsPerHour="180" departLane="best" departSpeed="random"/>
    <flow id="flow_complex3" type="car" route="route_complex3" begin="0" end="3600" vehsPerHour="190" departLane="best" departSpeed="random"/>
    <flow id="flow_complex4" type="car" route="route_complex4" begin="0" end="3600" vehsPerHour="170" departLane="best" departSpeed="random"/>
    
    <!-- Bus routes -->
    <flow id="flow_bus1" type="bus" route="route_h_mid1" begin="0" end="3600" vehsPerHour="30" departLane="0" departSpeed="random"/>
    <flow id="flow_bus2" type="bus" route="route_v_mid1" begin="0" end="3600" vehsPerHour="25" departLane="0" departSpeed="random"/>
    
    <!-- Delivery vehicles -->
    <flow id="flow_delivery" type="delivery" route="route_complex1" begin="0" end="3600" vehsPerHour="50" departLane="best" departSpeed="random"/>
    
    <!-- Taxis -->
    <flow id="flow_taxi1" type="taxi" route="route_complex2" begin="0" end="3600" vehsPerHour="80" departLane="best" departSpeed="random"/>
    <flow id="flow_taxi2" type="taxi" route="route_complex3" begin="0" end="3600" vehsPerHour="70" departLane="best" departSpeed="random"/>
</routes>
