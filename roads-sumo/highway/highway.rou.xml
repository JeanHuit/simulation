<?xml version="1.0" encoding="UTF-8"?>
<!-- highway.rou.xml - Routes and traffic flows -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle types -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="33.33" guiShape="passenger"/>
    <vType id="truck" accel="1.3" decel="4.0" sigma="0.5" length="12" minGap="3.0" maxSpeed="27.78" guiShape="truck"/>
    
    <!-- Route definitions -->
    <route id="route_through" edges="highway1 highway2 highway3 highway4"/>
    <route id="route_onramp" edges="onramp highway2 highway3 highway4"/>
    <route id="route_offramp" edges="highway1 highway2 highway3 offramp"/>
    
    <!-- Vehicle flows -->
    <!-- Main highway traffic -->
    <flow id="flow_through_cars" type="car" route="route_through" begin="0" end="3600" vehsPerHour="1200" departLane="best" departSpeed="max"/>
    <flow id="flow_through_trucks" type="truck" route="route_through" begin="0" end="3600" vehsPerHour="200" departLane="best" departSpeed="max"/>
    
    <!-- On-ramp traffic -->
    <flow id="flow_onramp" type="car" route="route_onramp" begin="0" end="3600" vehsPerHour="300" departLane="0" departSpeed="random"/>
    
    <!-- Off-ramp traffic -->
    <flow id="flow_offramp" type="car" route="route_offramp" begin="0" end="3600" vehsPerHour="250" departLane="best" departSpeed="max"/>
</routes>
